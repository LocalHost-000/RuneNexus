{%  extends 'layout.twig' %}

{% block content %}

<div class="container" style="margin-top:-40px;">
    {% include 'commands/components/header.twig' %}

    <div class="row mb-3">
        <div class="col-sm-12 col-lg-3">

            {% include 'commands/components/sidebar_nav.twig' %}
            

        </div>
        <div class="col-sm-12 col-lg-9">
           

          <table class="table">
            <thead>
              <tr>
                <th scope="col">Command</th>
                <th scope="col">Usage</th>
                <th scope="col">Info</th>
                <th scope="col">Code</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row"><span class="badge bg-warning text-white">::master</span></th>
                <td>::master</td>
                <td>Gives player all 99 skills</td>
                <td> 
                  <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#CommandMaster">
                    Code
                  </button>
              </td>
              </tr>

              <tr>
                <th scope="row"><span class="badge bg-info text-white">::pickup</span></th>
                <td>::pickup <span class="badge bg-info text-white">ItemID</span> <span class="badge bg-success text-white">number</span></td>
                <td>Gives player item + x amount</td>
                <td> 
                  <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#CommandPickup">
                    Code
                  </button>
              </td>
              </tr>      
            </tbody>
          </table>

          <div class="modal fade" id="CommandPickup" tabindex="-1" role="dialog" aria-labelledby="CommandPickupTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">Command code: <span class="badge bg-success text-white">::pickup</span></h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Pickup Code heree
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>


          <div class="modal fade" id="CommandMaster" tabindex="-1" role="dialog" aria-labelledby="CommandMasterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLongTitle">Command code: <span class="badge bg-success text-white">::master</span></h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  Master Code heree
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>

          
        </div>
    </div>

    {{ content|raw }}
</div>

{%  endblock %}