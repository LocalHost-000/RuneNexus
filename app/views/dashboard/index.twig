{% extends 'dash_layout.twig' %}
{% block content %}
<div class="container-fluid bg-default pb-7 pt-4">
    <div class="row">

        <div class="col-sm-12 col-lg-4 col-xl-4">
            <div class="card mb-4 overflow-hidden shadow-none">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-uppercase text-warning mb-0">
                                Votes
                            </h5>
                            <span class="h2 font-weight-bold mb-0">
                                {{ data['votes']['total']|number_format }}
                            </span>
                        </div>
                        <div class="col-auto">
                            <div class="icon icon-shape text-warning rounded-circle">
                                {{ icon('people', 32, 32) }}
                            </div>
                        </div>
                    </div>
                    
                    <p class="mt-3 mb-0 text-sm">
                        <span class="text-warning">
                            +{{ data['votes']['month']|number_format }}
                        </span>
                        <span class="text-nowrap">votes this month</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">
    <div class="row">
        <div class="col-sm-12 col-lg-8">
            {% for server in servers %}
            {% set seo = friendlyTitle(server.id~'-'~server.title) %}
            {% include 'dashboard/servers.twig' %}
            {% else %}
            <div class="alert alert-default shadow-sm">
                You dont have a server listed yet! Click the button above to add one now!
            </div>
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-lg-6">

        </div>
        <div class="col-sm-12 col-lg-6">
            
        </div>
    </div>
</div>

{% include 'chart_config.twig' %}


{% endblock %}