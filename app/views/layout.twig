<!DOCTYPE html>
<html lang="en-US">
<head>
    {% if page_title is defined %}
    <title>{{ page_title }} | PlayZanaris TopList</title>
    {% else %}
    <title>PlayZanaris | Find OldSchool Runescape Community Servers</title>
    {% endif %}

    <link rel="canonical" href="{{ route }}">

    {% if meta_tags is defined and meta_tags is not empty %}
    <meta name="keywords" content="{{ meta_tags }}">
    {% else %}
    <meta name="keywords" content="OldSchool RuneScape servers, OSRS community servers, Project Zanaris toplist, OSRS private server list, Jagex community servers, Play Zanaris, RuneScape server rankings, OSRS server hosting, Zanaris community servers, Top OSRS servers, Vote for OSRS servers, Join top Zanaris servers, Rank your OSRS server, Host your OSRS server, Start an OSRS community server, Promote RuneScape servers">
    {% endif %}

    {% if meta_info is defined and meta_info is not empty %}
    <meta name="description" content="{{ meta_info }}">
    {% else %}
    <meta name="description" content="PlayZanaris is the ultimate toplist for OldSchool RuneScape community servers. Discover, vote, and join the best OSRS community servers with ease.">
    {% endif %}

    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    <!-- Critical CSS Inline -->
    <style>
        body { font-family: 'Quicksand', sans-serif; }
        .custom-header { background: url('../img/headerbg.webp') no-repeat center center; background-size: cover; }
        /* Additional critical CSS */
    </style>

    <!-- Preconnects and Preloads -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Quicksand:wght@600&display=swap" as="style">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Quicksand:wght@600&display=swap" media="print" onload="this.media='all'">

    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" as="style">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" media="print" onload="this.media='all'">

    <link rel="preload" href="https://www.playzanaris.com/public/css/argon.min.css" as="style">
    <link rel="stylesheet" href="https://www.playzanaris.com/public/css/argon.min.css" media="print" onload="this.media='all'">

    <noscript>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Quicksand:wght@600&display=swap">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
        <link rel="stylesheet" href="https://www.playzanaris.com/public/css/argon.min.css">
    </noscript>

    <link rel="shortcut icon" href="https://playzanaris.com/public/img/icons/favicon.ico" type="image/x-icon">
</head>
<body>
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WF6TZBR" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>

    <div class="custom-header">
        {% include 'global/navbar.twig' %}
        {% include 'global/header.twig' %}
    </div>

    {% block content %}
    {% endblock %}

    {% if user is not defined and controller != "login" %}
        {% include 'modals/login.twig' %}
    {% endif %}
    {% include 'global/footer.twig' %}

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-163957784-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-163957784-1');
    </script>
</body>
</html>
